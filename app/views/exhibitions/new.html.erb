<div class="wrapper-for-content-outside-of-footer">
	<div class="form_wrapper">
		<h2>Enter New Exhibition</h2>

		<%= form_for @exhibition, :url => gallery_exhibitions_path, :html => { :multipart => true } do |e| %>
			<div class="field">
				<%= e.label :artist %>
				<%= e.text_field :artist %>
			</div>

			<div class="field">
				<%= e.label :name %>
				<%= e.text_field :name %>
			</div>

			<div class="field">
				<%= e.label "From" %>
				<%= e.date_field :date %>
			</div>

			<div class="field">
				<%= e.label "To" %>
				<%= e.date_field :end_date %>
			</div>
			<br>
			<div class="field">
				<%= e.file_field :avatar %>
			</div>
			<br>
			<div class="actions">
				<%= e.submit "Create Exhibition" %>
			</div>
		<% end %>
	</div>
</div>

