<div class="form_wrapper">
	<h2>Enter New Gallery</h2>

	<%= form_for @gallery, :url => galleries_path, :html => { :multipart => true }  do |g| %>
		<div class="field">
			<%= g.label :name %>
			<%= g.text_field :name %>
		</div>

		<div class="field">
			<%= g.label "Address" %>
			<%= g.text_field :address %>	
		</div>

		<div class="field">
			<%= g.label "Phone No." %>
			<%= g.text_field :phone %>
		</div>

		<div class="field">
			<%= g.label "Website" %>
			<%= g.text_field :website %>
		</div>
		<br>
		<div class="field">
			<%= g.file_field :avatar %>
		</div>
		<br>
		<div class="action">
			<%= g.submit "Create Gallery" %>
		</div>
		<br><br>
		<div class="action">
			<%= link_to "Go Back", user_path(session[:user_id])%>
		</div>
	<% end %>
</div>

