<% @galleries.each do |gallery| %>
	<section>
		<div class="grid_column" style="background-image: url('<%= gallery.avatar %>')">
			<div class="column_wrapper">
				<h1><%= link_to gallery.name, gallery_path(gallery.id) %></h1>
				<h2><%= gallery.address %></h2>
				<h3><%= gallery.phone %></h3>
			</div>
		</div>
	</section>
<% end %>
